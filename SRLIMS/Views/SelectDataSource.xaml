<UserControl x:Class="SRLIMS.Views.SelectDataSource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SRLIMS.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#F5F7FA">

    <!-- Importar los recursos de la aplicación -->
    <!-- No necesitamos definir ResourceDictionary aquí, ya que los estilos se definen a nivel de aplicación -->
    <!-- Si los estilos no están disponibles, se pueden definir directamente aquí -->
    <UserControl.Resources>
        <!-- Estilos locales si son necesarios -->
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#005B96" Padding="20">
            <TextBlock Text="SELECT DATA SOURCE" 
                      Foreground="White"
                      FontSize="24"
                      FontWeight="Bold"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      FontFamily="Century Gothic"/>
        </Border>

        <!-- Opciones de fuente de datos -->
        <Border Grid.Row="1" Background="White" Padding="20" 
                BorderBrush="#E0E3E8" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <RadioButton x:Name="rbExcel" 
                            Content="LOAD FROM EXCEL" 
                            GroupName="DataSource" 
                            FontWeight="SemiBold"
                            FontSize="14"
                            Style="{StaticResource ProfessionalRadioButton}"
                            Checked="DataSourceOption_Checked"
                            Margin="0,0,30,0"/>

                <RadioButton x:Name="rbDatabase" 
                            Content="LOAD FROM DATABASE" 
                            GroupName="DataSource"
                            FontWeight="SemiBold"
                            FontSize="14"
                            Style="{StaticResource ProfessionalRadioButton}"
                            Checked="DataSourceOption_Checked"/>
            </StackPanel>
        </Border>

        <!-- Contenido -->
        <Border Grid.Row="2" Background="White" Padding="40">
            <Grid>
                <!-- Panel para Excel -->
                <StackPanel x:Name="pnlExcel" Visibility="Collapsed" 
                          HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
                    <TextBlock Text="SELECT EXCEL FILE" 
                              Style="{StaticResource SectionTitle}"
                              Margin="0,0,0,25"/>

                    <DockPanel Margin="0,0,0,25">
                        <Button Content="BROWSE" 
                                Click="BrowseExcel_Click" 
                                Style="{StaticResource ProfessionalButton}"
                                DockPanel.Dock="Right" 
                                Margin="15,0,0,0"
                                Width="120"/>
                        <TextBox x:Name="txtExcelPath" 
                                Style="{StaticResource ProfessionalInputField}"
                                IsReadOnly="True"/>
                    </DockPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="CANCEL" 
                                Style="{StaticResource ProfessionalSecondaryButton}"
                                Width="120"
                                Margin="0,0,15,0"/>
                        <Button Content="QUERY DATA" 
                                Click="QueryExcel_Click"
                                Style="{StaticResource ProfessionalButton}"
                                Width="120"/>
                    </StackPanel>

                    <TextBlock Text="Supported formats: .xlsx, .xls" 
                              Style="{StaticResource HintText}"
                              Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Panel para Base de Datos -->
                <StackPanel x:Name="pnlDatabase" Visibility="Collapsed" 
                           HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
                    <TextBlock Text="DATABASE CONNECTION" 
                              Style="{StaticResource SectionTitle}"
                              Margin="0,0,0,25"/>

                    <StackPanel Margin="0,0,0,25">
                        <TextBlock Text="CONNECTION ID" Style="{StaticResource InputLabel}"/>
                        <TextBox x:Name="txtDatabaseID" 
                                Style="{StaticResource ProfessionalInputField}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="CANCEL" 
                                Style="{StaticResource ProfessionalSecondaryButton}"
                                Width="120"
                                Margin="0,0,15,0"/>
                        <Button Content="QUERY DATA" 
                                Click="QueryDatabase_Click"
                                Style="{StaticResource ProfessionalButton}"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>