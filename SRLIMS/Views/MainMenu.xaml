<UserControl x:Class="SRLIMS.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#F5F7FA">

    <Grid>
        <!-- Encabezado con logo y título -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Image Source="/LOGO SRL FINAL.png" 
                   Stretch="Uniform" 
                   Width="120"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <TextBlock Text="REPORTS MENU" 
                      Style="{StaticResource MainTitle}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,40"/>
        </StackPanel>

        <!-- Opciones del menú principal -->
        <Grid VerticalAlignment="Top" HorizontalAlignment="Center" Width="900" Margin="0,298,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Fila de botones -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                <Button Content="Many Wells per Page"
                        Style="{StaticResource ProfessionalButton}"
                        Width="280"
                        Height="60"
                        FontSize="18"
                        Margin="10"
                        Click="OpenSelectDataSourceFrame"/>

                <Button Content="Single Well per Page"
                        Style="{StaticResource ProfessionalButton}"
                        Width="280"
                        Height="60"
                        FontSize="18"
                        Margin="10"
                        Click="OpenSelectDataSourceFrame"/>

                <Button Content="Single Well Wide Method"
                        Style="{StaticResource ProfessionalButton}"
                        Width="280"
                        Height="60"
                        FontSize="18"
                        Margin="10"
                        Click="OpenSelectDataSourceFrame"/>
            </StackPanel>

            <!-- Otras opciones podrían ir aquí -->
            <Button Grid.Row="1" Content="Data Analysis Tools"
                    Style="{StaticResource ProfessionalButton}"
                    Width="400"
                    Height="50"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>

            <Button Grid.Row="2" Content="Configuration"
                    Style="{StaticResource ProfessionalButton}"
                    Width="400"
                    Height="50"
                    FontSize="16"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"/>
        </Grid>

        <!-- Pie de página consistente con Home -->
        <TextBlock Text="v2.0.0 © 2025 Southern Research Laboratories" 
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"
                  Foreground="#7A8BA6"
                  FontSize="12"/>
    </Grid>
</UserControl>