<UserControl x:Class="SRLIMS.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SRLIMS.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Definición de columnas: primera columna 20%, segunda columna el resto -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        <!-- Panel lateral (primera columna) -->
        <Grid Grid.Column="0" Background="Black">
            <!-- Logo centrado en la parte superior -->
            <Image Width="132" Height="161" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,24,0,0" Source="/LOGO SRL FINAL.png" Stretch="Uniform"/>
            <!-- Título SRLIMS (normal, sin rotación) -->
            <TextBlock Text="SRLIMS" FontFamily="Century Gothic" FontSize="24" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Top" Margin="0,212,0,0" Foreground="White"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,260,0,0" TextWrapping="Wrap" Text="Southern Research Laboratories Information Management System" VerticalAlignment="Top" Foreground="White" TextAlignment="Center" FontFamily="Century Gothic" FontSize="18" Height="144" Width="122"/>
            <!-- Aquí puedes agregar más elementos al panel lateral como menús, etc. -->
        </Grid>
        <!-- Contenido principal (segunda columna) -->
        <Grid Grid.Column="1" Background="White">
            <TextBox HorizontalAlignment="Center" Margin="0,22,0,0" TextWrapping="Wrap" Text="Reports" VerticalAlignment="Top" Width="143" FontFamily="Century Gothic" FontSize="24" FontWeight="Bold" TextAlignment="Center" Height="33" BorderBrush="{x:Null}"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Width="482" Height="41" Margin="0,72,0,0" Orientation="Horizontal">
  
                <Button Content="Many Wells per Page" FontFamily="Century Gothic" Click="OpenSelectDataSourceFrame" Width="160" Height="30" HorizontalAlignment="Left"/>
                <Button Content="Single Well per Page" FontFamily="Century Gothic" Click="OpenSelectDataSourceFrame" Width="160" Height="30" HorizontalAlignment="Center"/>
                <Button Content="Single Well per Page" FontFamily="Century Gothic" Click="OpenSelectDataSourceFrame" Width="160" Height="30" HorizontalAlignment="Right"/>
            </StackPanel>

            <!-- Aquí irá el contenido principal de tu aplicación -->
            <!-- Por ejemplo, puedes poner un Frame para navegación -->
        </Grid>
    </Grid>
</UserControl>
