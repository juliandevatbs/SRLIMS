<UserControl x:Class="SRLIMS.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="720" d:DesignWidth="1280"
             Background="#F5F7FA"
             >

    <Grid>
        <!-- Contenido principal centrado -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="620">

            <!-- Logo -->
            <Image Source="/LOGO SRL FINAL.png" 
                   Stretch="Uniform" 
                   Width="180"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <!-- Título principal -->
            <TextBlock Text="SRLIMS" 
                      Style="{StaticResource MainTitle}"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,10"/>

            <!-- Subtítulo -->
            <TextBlock Text="Southern Research Laboratories Information Management System"
                      Style="{StaticResource Subtitle}"
                      TextAlignment="Center"
                      Margin="0,0,0,40" Height="30" Width="506"/>

            <!-- Botón de inicio -->
            <Button Content="INICIAR SISTEMA"
                   Style="{StaticResource ProfessionalButton}"
                   HorizontalAlignment="Center"
                   Width="220"
                   Height="45"
                   FontSize="16"
                   Click="OpenMainMenu_Click"/>
        </StackPanel>

        <!-- Pie de página -->
        <TextBlock Text="v2.0.0 © 2025 Southern Research Laboratories" 
                  VerticalAlignment="Bottom"
                  HorizontalAlignment="Center"
                  Margin="0,0,0,20"
                  Foreground="#7A8BA6"
                  FontSize="12"/>
    </Grid>
</UserControl>