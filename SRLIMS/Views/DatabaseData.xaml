<UserControl x:Class="SRLIMS.Views.DatabaseDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SRLIMS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título para Chain of Custody -->
        <TextBlock Grid.Row="0" 
                   Text="Datos de Chain of Custody - Base de Datos" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="10,10,0,5"/>

        <!-- DataGrid para Chain of Custody -->
        <DataGrid x:Name="CustodyDataGrid" 
                  Grid.Row="1" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionChanged="CustodyDataGrid_SelectionChanged"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowBackground="White"
                  AlternatingRowBackground="#F5F5F5">
        </DataGrid>

        <!-- Título para Matrix Data -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Datos de Matrix - Base de Datos" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="10,10,0,5"/>

            <Button Grid.Column="1" 
                    Content="Obtener Muestras Seleccionadas" 
                    Width="200" 
                    Height="30" 
                    Margin="10,5,10,5" 
                    Click="GetSelectedChainData_Click"/>
        </Grid>

        <!-- DataGrid para Matrix Data -->
        <DataGrid x:Name="MatrixDataGrid" 
                  Grid.Row="3" 
                  Margin="10" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  SelectionChanged="MatrixDataGrid_SelectionChanged"
                  HeadersVisibility="Column"
                  Background="White"
                  BorderBrush="#DDDDDD"
                  BorderThickness="1"
                  RowBackground="White"
                  AlternatingRowBackground="#F5F5F5">
        </DataGrid>
    </Grid>
</UserControl>